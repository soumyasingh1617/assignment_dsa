#include<iostream>
#include<vector>
using namespace std;
int main(){
    vector <int> arr={1,2,3,4,5,6,7,8};
    int n=arr.size();
    vector <int> prefixsum(n);
    prefixsum[0]=arr[0];
    for(int i=1;i<n;i++){
        prefixsum[i]=prefixsum[i-1]+arr[i];
    }
    int q;
    cout<<"Enter number of queries: ";
    cin>>q;
    while(q--){
      int l,r;
      cout<<"Enter l and r: "<<endl;;
      cin>>l;
      cin>>r;
      int sum=0;
      if(l==0){
        sum=prefixsum[r];
      }
      else{
        sum=prefixsum[r]-prefixsum[l-1];
      }
      cout<<"Sum is: "<<sum<<endl;
      
    }

}
